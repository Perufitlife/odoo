<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="res_config_settings_view_uchat" model="ir.ui.view">
        <field name="name">res.config.settings.uchat.form</field>
        <field name="model">res.config.settings</field>
        <!-- 
            Importante: Asegúrate de usar el 'inherit_id' correcto según tu versión de Odoo.
            Para Odoo 16, normalmente es: base.res_config_settings_view_form
        -->
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <!--
              Opción 1: Insertar los campos en una pestaña nueva llamada 'UChat Settings'
            -->
            <xpath expr="//div[@class='o_notebook']" position="inside">
                <div class="o_page" name="uchat_tab">
                    <h2>UChat Settings</h2>
                    <div class="app_settings_block" data-string="UChat">
                        <div class="o_settings_container">
                            <div class="o_setting_box">
                                <div class="o_setting_left_pane"/>
                                <div class="o_setting_right_pane">
                                    <label for="uchat_api_token" string="API Token" class="o_form_label"/>
                                    <div class="text-muted">
                                        Configure your UChat integration settings
                                    </div>
                                    <field name="uchat_api_token" class="oe_inline"/>

                                    <!-- Ejemplo de otros campos que pudieran existir en tu modelo -->
                                    <label for="uchat_environment" string="Entorno UChat" class="o_form_label mt16"/>
                                    <field name="uchat_environment" class="oe_inline"/>

                                    <label for="uchat_auto_sync" string="Sincronización Automática" class="o_form_label mt16"/>
                                    <field name="uchat_auto_sync" widget="boolean_toggle" options="{'terminology': 'checkbox'}"/>

                                    <label for="uchat_default_language" string="Idioma Predeterminado" class="o_form_label mt16"/>
                                    <field name="uchat_default_language" class="oe_inline"/>

                                    <!-- Botón para probar conexión (si existe en tu modelo) -->
                                    <button name="action_test_connection"
                                            type="object"
                                            class="btn-primary mt16"
                                            string="Probar Conexión UChat" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>

            <!-- 
              Opción 2 (alternativa): Insertar tus campos dentro de la pestaña 'general_tab'.
              Descomenta lo de abajo y elimina/ajusta lo de arriba si prefieres usar la misma pestaña.
            -->
