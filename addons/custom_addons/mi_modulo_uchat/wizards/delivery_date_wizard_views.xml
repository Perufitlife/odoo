<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_delivery_date_wizard_form" model="ir.ui.view">
        <field name="name">delivery.date.wizard.form</field>
        <field name="model">delivery.date.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="delivery_date"/>
                </group>
                <footer>
                    <button string="Confirmar" 
                            name="action_confirm" 
                            type="object" 
                            class="btn-primary"/>
                    <button string="Cancelar" 
                            class="btn-secondary" 
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>