<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_order_tree_with_chat" model="ir.ui.view">
        <field name="name">sale.order.tree.chat.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="partner_mobile" widget="phone" optional="show"/>
                <field name="partner_phone" widget="phone" optional="show"/>
                <field 
                    name="products_summary" 
                    optional="show" 
                    string="Productos"
                    title="products_detail"/>
                <field name="partner_city" string="Ciudad" optional="show"/>
                <field name="commitment_date" optional="show" string="Fecha de Entrega"/>
                <field 
                    name="simplified_message" 
                    optional="show" 
                    string="Ãšltimo mensaje"
                    title="message_detail"/>
                <field name="amount_total" sum="Total" widget="monetary" optional="show"/>
            </xpath>
            
            <xpath expr="//tree" position="attributes">
                <attribute name="decoration-muted">state=='cancel'</attribute>
            </xpath>
            
            <xpath expr="//field[@name='activity_ids']" position="after">
                <button name="action_open_uchat" 
                        type="object" 
                        title="Abrir Chat"
                        icon="fa-whatsapp"
                        class="text-success"/>
            </xpath>
        </field>
    </record>
</odoo>