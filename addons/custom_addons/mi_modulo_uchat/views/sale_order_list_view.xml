<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_quotation_tree_with_phone_chat" model="ir.ui.view">
        <field name="name">sale.order.tree.with.phone.chat</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree"/>
        <field name="arch" type="xml">
            <!-- Añadir el campo de teléfono después del cliente -->
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="partner_phone" widget="phone" string="Teléfono"/>
            </xpath>
            
            <!-- Añadir el botón de chat -->
            <xpath expr="//field[@name='activity_ids']" position="after">
                <button name="action_open_uchat" 
                        type="object" 
                        icon="fa-whatsapp" 
                        class="text-success"
                        title="Abrir Chat"/>
            </field>
        </field>
    </record>
</odoo>
