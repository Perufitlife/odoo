<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_order_tree_with_chat" model="ir.ui.view">
        <field name="name">sale.order.tree.chat.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree"/>
        <field name="arch" type="xml">
            <!-- Añadir columna de teléfono después del cliente -->
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="partner_id" invisible="1"/>
                <field name="partner_id" string="Teléfono">
                    <div>
                        <field name="partner_id" widget="many2one"/>
                        <field name="partner_id" widget="phone" options="{'enable_sms': false}" attrs="{'invisible': [('partner_id', '=', False)]}"/>
                    </div>
                </field>
            </xpath>
            
            <!-- Añadir botón de chat -->
            <xpath expr="//field[@name='activity_ids']" position="after">
                <button name="action_open_uchat" 
                        type="object" 
                        string=""
                        class="fa fa-whatsapp text-success" 
                        title="Abrir Chat"/>
            </xpath>
        </field>
    </record>
</odoo>