<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_order_form_inherit_delivery_address" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.delivery.address</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- Solo partner_id modificación -->
        <field name="partner_id" position="replace">
            <field name="partner_id" 
                widget="contact_address" 
                string="Cliente" 
                context="{'res_partner_search_mode': 'customer', 'show_address': 1, 'show_vat': True, 'show_phone': True}"
                options="{'always_reload': True}"/>
            <field name="partner_id.phone" string="Teléfono" readonly="1"/>
            <field name="partner_id.l10n_pe_district" string="Distrito" readonly="1"/>
        </field>

        <field name="commitment_date" position="after">
            <field name="x_initial_status" string="Estado Inicial"/>
            <field name="partner_shipping_id"
                context="{'default_type': 'delivery'}"
                options="{'no_open': False, 'no_create_edit': False}"
                domain="[('parent_id','=', partner_id), ('type','=','delivery')]"/>
        </field>
    </record>
</odoo>