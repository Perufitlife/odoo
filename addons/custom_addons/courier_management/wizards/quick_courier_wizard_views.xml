<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Vista de formulario para el wizard -->
    <record id="view_quick_courier_wizard_form" model="ir.ui.view">
        <field name="name">quick.courier.wizard.form</field>
        <field name="model">quick.courier.wizard</field>
        <field name="arch" type="xml">
            <form string="Configuración Rápida de Courier">
                <sheet>
                    <group>
                        <field name="name" placeholder="Nombre del nuevo courier"/>
                        <field name="delivery_type"/>
                        <field name="district_id" 
                               options="{'no_create': True}"
                               domain="[('city_id', '!=', False)]"/>
                        <field name="price"/>
                        <field name="sale_order_id" invisible="1"/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_confirm" 
                            string="Crear y Asignar" 
                            type="object" 
                            class="btn-primary"/>
                    <button special="cancel" 
                            string="Cancelar" 
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Acción del wizard -->
    <record id="action_quick_courier_wizard" model="ir.actions.act_window">
        <field name="name">Configurar Nuevo Courier</field>
        <field name="res_model">quick.courier.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>