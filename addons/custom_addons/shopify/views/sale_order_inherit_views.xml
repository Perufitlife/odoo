<odoo>
    <!-- Inherit del formulario -->
    <record id="view_order_form_inherit_shopify" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.shopify</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="shopify_store_id"/>
                <field name="x_initial_status"/>
            </xpath>
        </field>
    </record>

    <!-- Inherit de la vista de cotizaciones -->
    <record id="view_quotation_tree_inherit_shopify" model="ir.ui.view">
        <field name="name">sale.quotation.tree.inherit.shopify</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="x_initial_status" optional="show" string="Estado Inicial"/>
            </xpath>
        </field>
    </record>

    <!-- Inherit de la vista de filtros -->
    <record id="view_sales_order_filter_inherit_shopify" model="ir.ui.view">
        <field name="name">sale.order.list.select.inherit.shopify</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_sales_order_filter"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="x_initial_status"/>
            </field>
        </field>
    </record>
</odoo>