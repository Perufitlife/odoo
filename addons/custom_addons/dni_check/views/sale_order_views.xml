<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_order_form_inherit_dni_check" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.dni.check</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_check_dni"
                        type="object"
                        string="Consultar DNI"
                        class="btn-secondary"/>
            </xpath>
        </field>
    </record>
</odoo>